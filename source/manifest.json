{
  "name": "__MSG_app_name_title__",
  "short_name": "__MSG_app_short_name_title__",
  "version": "3.2.0.5",
  "manifest_version": 2,
  "description": "__MSG_app_description_text__",
  "author": "ExpressVPN",
  "__chrome__minimum_chrome_version": "53",
  "icons": {
    "16": "images/icon-16.png",
    "19": "images/icon-19.png",
    "38": "images/icon-38.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "__firefox__applications": {
    "gecko": {
      "id": "firefox-addon@expressvpn.com",
      "strict_min_version": "50.0"
    }
  },
  "permissions": [
    "alarms",
    "nativeMessaging",
    "privacy",
    "storage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "cookies",
    "tabs",
    "proxy",
    "unlimitedStorage",
    "notifications",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "19": "images/icon-19.png",
      "20": "images/icon-20.png",
      "25": "images/icon-25.png",
      "30": "images/icon-30.png",
      "40": "images/icon-40.png",
      "38": "images/icon-38.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "ExpressVPN",
    "default_popup": "html/popup.html"
  },
  "web_accessible_resources": [
    "images/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
        "all_frames": true,
        "match_about_blank": true,
        "run_at": "document_start",
        "js": ["scripts/content/gps.js"]
    }
  ]
}
